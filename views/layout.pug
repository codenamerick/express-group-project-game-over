doctype html
html
  head
      block head
        title="Game Over App!"
        link(rel='stylesheet' href='/stylesheets/index.css')
  body
    header
      div
        div.nav-left
          ul
            li link
            li link
            li link
        div.nav-right
          if locals.authenticated
            span #{user.first_name} logged in
            form(action='/users/logout' method='post')
              button(class='main-btn') Logout
          else
            span
              a(href='/users/login' class='main-btn log-in-btn') Log in
              a(href='/users/sign-up' class='main-btn') Sign up
    block content
