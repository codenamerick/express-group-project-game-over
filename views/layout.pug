doctype html
html
  head
      block head
        title="Game Over App | Where gamers win!"
        link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.1/css/all.css" rel="stylesheet")
        link(rel='stylesheet' href='/stylesheets/main-styles.css')
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(property="og:image" content="https://res.cloudinary.com/dedpxzbak/image/upload/v1641441699/game-over-app_bqkt4j.png")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet")
        script(src="/javascripts/index.js" type="module" defer)
  body
    div.style-divider
    header
      div
        div.nav-left
          ul
            li
              a(href="/" class='logo-link')
                img(src="/images/game-over-controller-logo-multi-color.png", alt="Game Over logo" class='nav-logo')
            li
              a(href="/") Home
            li
              a(href="/questions") Questions
          form(action="/results" method='get').searchForm
            input(type="hidden" name="_csrf" value=csrfToken)
            div
              input(type='search' placeholder='Search Questions...' name="search" value=search)
              <i class="fas fa-search"></i>
        div.nav-right
          if locals.authenticated
            span(class='user-greeting') Welcome, #{user.first_name}!
            form(action='/users/logout' method='post')
              button(class='main-btn log-out-btn') Log out
          else
            a(href='/users/demo_user' class='main-btn') Demo User
            a(href='/users/login' class='main-btn log-in-btn') Log in
            a(href='/users/sign-up' class='main-btn') Sign up
    block content
