extends layout.pug

include utils.pug

block content
   main
      div.questionContainer
         h3= question.title
         form(action=`/questions/${question.id}` method='post')
            input(name='_csrf' type='hidden' value=csrfToken)
            div
               label(for='question' id='ask_label') Question Content
            div
               textarea(name='question' value=question.question) #{question.question}
            div
               button.main-btn Save
